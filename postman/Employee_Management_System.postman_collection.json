{
    "info": {
      "name": "Employee Management System",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Auth",
        "item": [
          {
            "name": "Register",
            "request": {
              "method": "POST",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"Admin@123\"\n}"
              },
              "url": "{{BASE_URL}}/auth/register/"
            }
          },
          {
            "name": "Login",
            "request": {
              "method": "POST",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"Admin@123\"\n}"
              },
              "url": "{{BASE_URL}}/auth/login/"
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "var json = pm.response.json();",
                    "pm.environment.set(\"access_token\", json.access);",
                    "pm.environment.set(\"refresh_token\", json.refresh);"
                  ]
                }
              }
            ]
          },
          {
            "name": "Refresh Token",
            "request": {
              "method": "POST",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
              },
              "url": "{{BASE_URL}}/auth/refresh/"
            }
          }
        ]
      },
      {
        "name": "Forms",
        "item": [
          {
            "name": "Create Form",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Content-Type", "value": "application/json" },
                { "key": "Authorization", "value": "Bearer {{access_token}}" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"name\": \"IT Employee Form\",\n  \"fields\": [\n    {\"label\": \"Name\", \"field_type\": \"text\"},\n    {\"label\": \"Experience\", \"field_type\": \"number\"}\n  ]\n}"
              },
              "url": "{{BASE_URL}}/forms/"
            }
          },
          {
            "name": "List Forms",
            "request": {
              "method": "GET",
              "header": [
                { "key": "Authorization", "value": "Bearer {{access_token}}" }
              ],
              "url": "{{BASE_URL}}/forms/"
            }
          }
        ]
      },
      {
        "name": "Employees",
        "item": [
          {
            "name": "Create Employee",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Content-Type", "value": "application/json" },
                { "key": "Authorization", "value": "Bearer {{access_token}}" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"form_id\": 1,\n  \"data\": [\n    {\"field_id\": 1, \"value\": \"Azhar\"},\n    {\"field_id\": 2, \"value\": \"5\"}\n  ]\n}"
              },
              "url": "{{BASE_URL}}/employees/"
            }
          },
          {
            "name": "List Employees",
            "request": {
              "method": "GET",
              "header": [
                { "key": "Authorization", "value": "Bearer {{access_token}}" }
              ],
              "url": "{{BASE_URL}}/employees/"
            }
          },
          {
            "name": "Search Employees",
            "request": {
              "method": "GET",
              "header": [
                { "key": "Authorization", "value": "Bearer {{access_token}}" }
              ],
              "url": "{{BASE_URL}}/employees/?label=Experience&value=5"
            }
          }
        ]
      }
    ]
  }
  